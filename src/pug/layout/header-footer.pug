mixin navLink(link, name)
	li 
		a(href=link).header-nav-link=name

block variables

doctype html 
html(lang = 'en')
	head 
		title= nameTitle
		link(rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css")
	body
		header 
			div.container
				div(class= 'nav-wrapper')
					div(class= 'nav-logo')
						a(href='index.html'): img(src=require('../../assets/images/logoHeader.png').default, alt='star soft')
					nav.nav-items
						ul.nav-items-list
							+navLink('/services.html','Services')
							+navLink('/partners.html','Partners')
							+navLink('/about-us.html','About us')
							+navLink('/careers.html','Careers')
					div.nav-btn-languages
							a(href='#' class = 'nav-btn-languages-en') En
		block content
		footer
			div.container
				div(class= 'nav-wrapper')
					div(class= 'nav-logo')
						a(href='index.html'): img(src=require('../../assets/images/logoFooter.png').default, alt='star soft')
					nav.nav-items
						ul.nav-items-list
							+navLink('#','Services')
							+navLink('#','Partners')
							+navLink('#','About us')
							+navLink('#','Careers')
					div.nav-btn-languages
							a(href='#') En
				div.footer-rights
					span Â© 2021 5 Stars Soft, All Rights Reserved
					span Privacy Policy
					span Terms of Use
		script(src="https://unpkg.com/swiper/swiper-bundle.min.js")